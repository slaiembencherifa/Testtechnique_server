{% extends 'base.html.twig' %}

{% block titre %}Liste versions{% endblock %}

{% block body %}

<!-- /.row -->
<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                List Serveurs
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                {% if not versions %}

                <h2>vous n'avez aucune version !!!</h2>

                {% else %}


                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>numéro de version</th>

            </tr>
        </thead>
        <tbody>
        {% for version in versions %}
            <tr>
                <td><a href="{{ path('version_show', { 'id': version.id }) }}">{{ version.id }}</a></td>
                <td>{{ version.nom }}</td>
                <td>{{ version.numvers }}</td>

            </tr>

        {% endfor %}
        </tbody>
    </table>
                {% endif %}
    <li>
        <a href="{{ path('software_index') }}">Retour à la liste des logiciels</a>
    </li>
{% endblock %}
