{% extends 'base.html.twig' %}

{% block titre %}Liste versions{% endblock %}

{% block body %}

<!-- /.row -->
<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                List Serveurs
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                {% if not versions %}

                <h2>vous n'avez aucune version !!!</h2>

                {% else %}


                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>num√©ro de version</th>
                <th>Logiciel</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for version in versions %}
            <tr>
                <td><a href="{{ path('version_show', { 'id': version.id }) }}">{{ version.id }}</a></td>
                <td>{{ version.nom }}</td>
                <td>{{ version.numvers }}</td>
                <td>{{ version.software.nom }}</td>
                <td><a href="{{ path('version_delete',{'id':version.id,'server':server.id}) }}">Supprimer</a></td>

            </tr>
{% endfor %}
        </tbody>
    </table>
{% endif %}

{% endblock %}
