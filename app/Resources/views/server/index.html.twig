{% extends 'base.html.twig' %}

{% block titre %}Liste Serveurs{% endblock %}

{% block body %}

    <!-- /.row -->
    <div class="row">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    List Serveurs
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    {% if not servers %}

                        <h2>vous n'avez aucun Serveur !!!</h2>

                    {% else %}


                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Emplacement</th>
                                <th>Modele</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for server in servers %}
                                <tr>
                                    <td><a href="{{ path('server_show', { 'id': server.id }) }}">{{ server.id }}</a></td>
                                    <td>{{ server.nom }}</td>
                                    <td>{{ server.emplacement }}</td>
                                    <td>{{ server.modele }}</td>
                                    <td>
                                        <ul class="menu_horizontal">
                                            <li>
                                                <a href="{{ path('server_show', { 'id': server.id }) }}" data-toggle="tooltip" title="afficher"><i class="fa  fa-eye"></i></a>
                                            </li>
                                            <li>
                                                <a href="{{ path('server_edit', { 'id': server.id }) }}" data-toggle="tooltip" title="modifier"><i class="fa  fa-edit"></i></a>
                                            </li>
                                            <li>
                                                <a href="{{ path('server_listofversions', { 'id': server.id }) }}" data-toggle="tooltip" title="Logiciel installer"><i class="fa  fa-cogs"></i></a>
                                            </li>
                                            <li>
                                                <a href="{{ path('versionstoadd', { 'id': server.id }) }}" data-toggle="tooltip" title="ajouter un logciel"><i class="fa  fa-plus-circle" ></i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    {% endif %}
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

 {% block stylesheets %}
     <!-- DataTables Responsive CSS -->
     <link href="{{ asset('vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">

     <!-- Custom CSS -->
     <link href="{{ asset('dist/css/sb-admin-2.css') }}" rel="stylesheet">

     <!-- Custom Fonts -->
     <link href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"
           type="text/css">

     <style>

         /*mettre la balise <ul><li> sous forme de menu horizontal */

         /*Je sélectionne les <li> du menu horizontal */
         ul.menu_horizontal li {
             display : inline;
             padding : 0 0.5em;  /*Pour espacer les boutons entre eux*/
         }
         ul.menu_horizontal {
             list-style-type : none;  /*Car sinon les puces se placent n'importe où*/
         }
     </style>
 {% endblock %}

            {% block javascripts %}

                <!-- DataTables JavaScript -->
                <script src="{{ asset('vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
                <script src="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
                <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>

                <!-- Page-Level Demo Scripts - Tables - Use for reference -->
                <script>
                    $(document).ready(function () {
                        $('#dataTables-example').DataTable({
                            responsive: true
                        });
                    });
                </script>

            {% endblock %}












































