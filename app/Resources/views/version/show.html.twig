{% extends 'base.html.twig' %}

{% block body %}
    <h1>Version</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ version.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ version.nom }}</td>
            </tr>
            <tr>
                <th>Numvers</th>
                <td>{{ version.numvers }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('version_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('version_edit', { 'id': version.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
